@{
    var status = Context.Request.Query["status"];
    var pending = "text-primary";
    var inprocess = "text-primary";
    var completed = "text-primary";
    var approved = "text-primary";
    var all = "text-primary";
    string pendingBg = "";
    string inprocessBg = "";
    string completedBg = "";
    string approvedBg = "";
    string allBg = "";

    switch (status)
    {
        case "pending":
            pending = "active text-white";
            pendingBg = "bg-primary";
            break;
        case "inprocess":
            inprocess = "active text-white";
            inprocessBg = "bg-primary";
            break;
        case "completed":
            completed = "active text-white";
            completedBg = "bg-primary";
            break;
        case "approved":
            approved = "active text-white";
            approvedBg = "bg-primary";
            break;
        default:
            all = "active text-white";
            allBg = "bg-primary";
            break;
    }
}

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ms-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Order List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="d-flex justify-content-between pb-5 pt-2">
            <span></span>
            <ul class="list-group list-group-horizontal-sm">
                <li class="list-group-item @inprocessBg">
                    <a style="text-decoration:none" class="@inprocess" asp-controller="Order" asp-action="Index" asp-route-status="inprocess">In process</a>
                </li>
                <li class="list-group-item @pendingBg">
                    <a style="text-decoration:none" class="@pending" asp-controller="Order" asp-action="Index" asp-route-status="pending">Pending</a>
                </li>
                <li class="list-group-item @completedBg">
                    <a style="text-decoration:none" class="@completed" asp-controller="Order" asp-action="Index" asp-route-status="completed">Completed</a>
                </li>
                <li class="list-group-item @approvedBg">
                    <a style="text-decoration:none" class="@approved" asp-controller="Order" asp-action="Index" asp-route-status="approved">Approved</a>
                </li>
                <li class="list-group-item @allBg">
                    <a style="text-decoration:none" class="@all" asp-controller="Order" asp-action="Index" asp-route-status="all">All</a>
                </li>
            </ul>
        </div>
        <table id="tblData" class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Phone Number
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Total
                    </th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/order.js"></script>
}